{
  "name": "slacktron-vscode",
  "displayName": "Slacktron - Distraction Blocker",
  "description": "A Slack app to help developers tune off distractions during coding sessions",
  "version": "0.0.6",
  "publisher": "slacktron",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jhotika/slacktron-vscode-ext"
  },
  "engines": {
    "vscode": "^1.96.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "slacktron.installSlack",
        "title": "Install Slacktron App"
      },
      {
        "command": "slacktron.authenticate",
        "title": "Authenticate with Slack"
      }
    ],
    "uriHandlers": [
      {
        "scheme": "slacktron",
        "title": "Slacktron URI Handler"
      }
    ],
    "configuration": {
      "title": "Slacktron",
      "properties": {
        "slacktron.slackToken": {
          "type": "string",
          "default": "",
          "description": "Slack OAuth token",
          "secret": true
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "typescript": "^5.3.2",
    "ts-loader": "^9.5.1",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}
